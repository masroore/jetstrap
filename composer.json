{
  "name": "masroore/jetstrap",
  "description": "A Laravel package to easily switch TailwindCSS resources generated by Laravel Jetstream to Bootstrap 5.",
  "keywords": ["laravel", "bootstrap", "jetstream"],
  "license": "MIT",
  "support": {
    "issues": "https://github.com/masroore/jetstrap/issues",
    "source": "https://github.com/masroore/jetstrap"
  },
  "authors": [
    {
      "name": "Anitche Chisom",
      "email": "anitchec.dev@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=^8.0",
    "illuminate/support": "^8.0|^9.0|^10.0|^11.0"
  },
  "require-dev": {
    "inertiajs/inertia-laravel": "^0.3",
    "laravel/breeze": "^1.1",
    "laravel/jetstream": "^3.2",    
    "orchestra/testbench": "^6.0|^7.0",
    "phpunit/phpunit": "^10.1"
  },
  "autoload": {
    "psr-4": {
      "NascentAfrica\\Jetstrap\\": "src/NascentAfrica/Jetstrap/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NascentAfrica\\Jetstrap\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "NascentAfrica\\Jetstrap\\JetstrapServiceProvider"
      ],
      "aliases": {
        "Jetstrap": "NascentAfrica\\Jetstrap\\JetstrapFacade"
      }
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "tests": "vendor/bin/phpunit",
    "testsVerbose": "@tests -vvv"
  }
}
